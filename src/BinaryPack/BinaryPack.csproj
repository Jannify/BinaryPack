<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <Version>1.0.2</Version>
    <Authors>Sergio Pedri</Authors>
    <Company>Sergio Pedri</Company>
    <Description>A fast and memory efficient binary serialization library, powered by dynamic IL generation and inspired by MessagePack</Description>
    <Copyright>Copyright (c) 2021 Sergio Pedri</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Sergio0694/BinaryPack</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/Sergio0694/BinaryPack</RepositoryUrl>
    <PackageTags>dotnet net netcore netstandard csharp library compression serialization json messagepack binary pack</PackageTags>
    <PackageIconUrl>https://i.imgur.com/PyEEJrt.png</PackageIconUrl>
    <AssemblyVersion>1.0.2.0</AssemblyVersion>
    <PackageReleaseNotes>• Fixed a stackoverflow with invalid data</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="5.0.0" />
  </ItemGroup>

</Project>
